{
  "compileOnSave": true,
  "compilerOptions": {
	"outDir": "dist",
	"baseUrl": "src",
	"target": "es2016",
	"module": "commonjs",
	"lib": [
	  "es6"
	],
	"typeRoots": [
	  "node_modules/@types"
	],
	"declaration": true,
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true,
	"noUnusedLocals": true,
	"strictNullChecks": true,
	"noUnusedParameters": true,
	"noImplicitThis": true,
	"noImplicitReturns": true,
	"noFallthroughCasesInSwitch": true,
	"sourceMap": true
  },
  "include": [
	"src/**/*.ts"
  ],
  "exclude": [
	"node_modules"
  ]
}